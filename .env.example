# Application Settings
APP_NAME="Python Web App Template"
APP_VERSION="0.1.0"
ENVIRONMENT=development
DEBUG=true
PRODUCTION=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
# Options: sqlite or postgresql
DATABASE_TYPE=postgresql

# PostgreSQL settings (if DATABASE_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=webapp_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=webapp_db

# SQLite settings (if DATABASE_TYPE=sqlite)
SQLITE_DATABASE_PATH=./webapp.db

# Security
# Generate a secure key for production: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production-use-a-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Optional: External Service Integrations
# Add your external service configurations here
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Feature Flags
# FEATURE_FLAG_NEW_UI=false
# FEATURE_FLAG_BETA_FEATURES=false
